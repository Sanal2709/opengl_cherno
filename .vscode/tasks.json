{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build",
          "type": "shell",
          "command": "cmake -DCMAKE_BUILD_TYPE=Debug -B build && cd build && make -j4",
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      },
      {
          "label": "rebuild",
          "type": "shell",
          "dependsOn": [
            "clean"
          ],
          "command": "cmake -DCMAKE_BUILD_TYPE=Debug -B build && cd build && make -j4",
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      },
      {
          "label": "clean",
          "type": "shell",
          "command": "rm -R *",
          "options": {
              "cwd": "${workspaceFolder}/build"
          },
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ]
}